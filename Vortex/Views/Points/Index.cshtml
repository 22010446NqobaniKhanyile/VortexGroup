@model IEnumerable<Vortex.Models.Points>

@{
    ViewBag.Title = "Index";
}

<h2>Students rewards</h2>

<p>
    @Html.ActionLink("Reward student here", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Report.FaultTyp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reward)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Report.FaultTyp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Point)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reward)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PointsID }) |
            
            @Html.ActionLink("Remove", "Delete", new { id=item.PointsID })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back home", "AdminHomePage", "Home")
</div>